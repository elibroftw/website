    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
            },
            "args": [
                "run",
                "--debug",
                "--port",
                "5001"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Python: Flask app.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal"
        }
    ]
}
